<Window x:Class="Flowchart_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flowchart_Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Canvas Background="White" 
                AllowDrop="True" 
                DragOver="destination_DragOver" 
                DragLeave="destination_DragLeave" 
                Drop="destination_Drop" 
                Name="destination">
        </Canvas>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          
            


            <Canvas Width="140" 
                    Height="60"
                    Background="#FF52C0AA"
                    MouseMove="actionBlock_MouseMove" 
                    Name="actionBlock">

                <Label FontSize="12" 
                           Foreground="White" 
                           Canvas.Left="40" 
                           Canvas.Top="18"
                           Width="100">
                    <TextBlock Text="Действие" TextWrapping="Wrap"/>
                </Label>
            </Canvas>

            <TextBlock Text="Блок (1)" 
                       FontSize="10" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Grid.Column="1" />

            <Canvas Name="conditionBlock" MouseMove="conditionBlock_MouseMove" Grid.Row="1">

                <Polygon Fill="#FF60B2D3" 
                                 Points="55 120 120 90 190 120" 
                                 Grid.Row="1" 
                                 Canvas.Top="-85" 
                                 Canvas.Left="-50"/>

                <Polygon Fill="#FF60B2D3" 
                                 Points="190 120 55 120 120 150" 
                                 Grid.Row="1" 
                                 Canvas.Top="-85" 
                                 Canvas.Left="-50"/>

                <Label   FontSize="12" 
                                 Foreground="White" 
                                 Canvas.Left="43" 
                                 Canvas.Top="22"
                                 Width="100">
                    <TextBlock Text="Условие" TextWrapping="Wrap"/>
                </Label>
            </Canvas>

            <TextBlock Text="Условие (2)" 
                               FontSize="10" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               Grid.Column="1" 
                               Grid.Row="1"/>

            <Canvas Name="startEndBlock"  
                            MouseMove="startEndBlock_MouseMove"  
                            Grid.Row="2">

                <Rectangle Width="140" 
                               Height="60" 
                               Fill="#FFF25252" 
                               RadiusX="25" 
                               RadiusY="25" 
                               Grid.Row="2" 
                               Canvas.Top="10">
                </Rectangle>
                <Label FontSize="12" 
                               Foreground="White" 
                               Canvas.Left="30" 
                               Canvas.Top="28">
                    <TextBlock Text="Начало/Конец" TextWrapping="Wrap"/>
                </Label>
            </Canvas>

            <TextBlock Text="Начало / Конец (3)" 
                               FontSize="10" 
                               Grid.Column="1" 
                               Grid.Row="2" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>
            
            <Canvas Name="inputOutputBlock"  
                            MouseMove="inputOutputBlock_MouseMove"  
                            Grid.Row="3">
                <Rectangle Width="102" 
                                   Height="30" 
                                   Fill="#FF05273C" 
                                   Canvas.Top="11" 
                                   Canvas.Left="5">
                    <Rectangle.RenderTransform>
                        <MatrixTransform Matrix="1 0 1 2 1 -3"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Label FontSize="12" 
                               Foreground="White" 
                               Canvas.Left="37" 
                               Canvas.Top="25">
                    <TextBlock Text="Ввод/Вывод" TextWrapping="Wrap"/>
                </Label>
            </Canvas>

            <TextBlock Text="Ввод / Вывод (4)" 
                               FontSize="10" 
                               Grid.Column="1" 
                               Grid.Row="3" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>

            <Canvas Width="140" 
                            Height="60"
                            Background="#FFBA64C8"
                            Grid.Row="4" 
                            Name="subroutineBlock"  
                            MouseMove="subroutineBlock_MouseMove">
                <Border BorderBrush="Black" 
                                Height="60" 
                                Width="140" 
                                BorderThickness="1" 
                                CornerRadius="1">
                    <Canvas>
                        <Border BorderBrush="Black" 
                                        Height="60" 
                                        Width="100" 
                                        BorderThickness="1" 
                                        CornerRadius="1" 
                                        Canvas.Left="20" 
                                        Canvas.Top="-1">
                        </Border>
                    </Canvas>
                </Border>
                <Label FontSize="12" 
                               Foreground="White" 
                               Canvas.Left="28"
                               Canvas.Top="17">
                    <TextBlock Text="Подпрограмма" TextWrapping="Wrap"/>
                </Label>
            </Canvas>

            <TextBlock Text="Подпрограмма (5)" 
                               FontSize="10" 
                               Grid.Column="1" 
                               Grid.Row="4" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>

        </Grid>
    </Grid>
</Window>
